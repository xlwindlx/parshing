<p id="notice"><%= notice %></p>

<h2 style="text-align:center;">교양과목 시간표</h2>

<table>
  <caption><%= link_to '뒤로가기', home_index_path %></caption>
  <thead>
    <tr>
      <th>이수 구분</th>
      <th>과목명</th>
      <th>학점</th>
      <th>교강사</th>
      <th>요일/시간</th>
      <th>강의실</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @normals.each do |n| %>
      <tr>
        <td><%= n.div %></td>
        <td><%= n.title %></td>
        <td><%= n.grades %></td>
        <td><%= n.prof %></td>
        <td><%= simple_format n.time %></td>
        <td><%= simple_format n.classroom %></td>
        <td><%= link_to '자세히 보기', n %></td>
        <td><%= link_to '수정', edit_normal_path(n) %></td>
        <td><%= link_to '삭제', n, method: :delete, data: { confirm: '삭제할까요?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="9" style="text-align:center;">
        <h2><strong><%= link_to '과목 추가하기', new_normal_path %></strong></h2>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to '뒤로가기', home_index_path %>